{
  "name": "quilter",
  "version": "0.1.10",
  "description": "Maps file directory to a Cloudant database",
  "preferGlobal": "true",
  "main": "./lib/index.js",
  "bin": {
    "quilt": "./node_modules/.bin/forever ./bin"
  },
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "grunt && ./node_modules/.bin/mocha"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:garbados/quilt.js.git"
  },
  "keywords": [
    "couchdb",
    "cloudant",
    "watch",
    "files",
    "sync",
    "replicate",
    "replication",
    "edgewise"
  ],
  "author": "Max Thayer <garbados@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "mocha": "~1.13.0",
    "grunt-contrib-jshint": "~0.6.4",
    "grunt": "~0.4.1",
    "matchdep": "~0.3.0"
  },
  "dependencies": {
    "watch": "~0.8.0",
    "nano": "~4.1.4",
    "async": "~0.2.9",
    "dive": "~0.3.0",
    "underscore": "~1.5.2",
    "mime": "~1.2.11",
    "optimist": "~0.6.0",
    "forever": "~0.10.11"
  }
}
